<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="56dp"
    android:scrollbars="horizontal|vertical"
    tools:context=".EducationDetailFragment">

    <TextView
        android:id="@+id/detailEducationTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:text="@string/bacheleor_i_sykepleie_heltid"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailSchoolName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:autoLink="web"
        android:clickable="true"
        android:focusable="true"
        android:linksClickable="true"
        android:longClickable="false"
        android:text="@string/h_yskolen_i_stfold"
        android:textColor="#3D57BB"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailEducationTitle" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/poenggrense"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailSchoolName" />

    <TextView
        android:id="@+id/detailPoenggrense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="50dp"
        android:text="@string/poenggrenseinput"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/educationDescription"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/detailSchoolName" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingButton_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_floating_button_stroke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/sendToWebImgView"
        android:layout_width="17dp"
        android:layout_height="22dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/send_webbrowser"
        android:src="@android:drawable/ic_menu_set_as"
        app:layout_constraintStart_toEndOf="@+id/detailSchoolName"
        app:layout_constraintTop_toBottomOf="@+id/detailEducationTitle" />

    <TextView
        android:id="@+id/educationDescription"
        android:layout_width="325dp"
        android:layout_height="165dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:padding="5dp"
        android:text="@string/beskrivelsestekst"
        app:layout_constraintBottom_toTopOf="@+id/floatingButton_fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detailPoenggrense"
        app:layout_constraintTop_toBottomOf="@+id/detailEducationTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>